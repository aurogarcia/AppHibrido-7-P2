    const dados = {
        nome: formData.get('nome'),
        descricao: formData.get('descricao')
    };
    
    console.log('üìù Dados do formul√°rio:', dados);
    console.log('üîÑ Modo atualiza√ß√£o:', isUpdate, 'ID:', projetoId);
    
    if (!dados.nome || dados.nome.trim() === '') {
        alert('Nome do projeto √© obrigat√≥rio');
        return;
    }
    
    try {
        console.log('üöÄ Enviando requisi√ß√£o...');
        
        // Feedback visual - desabilitar bot√£o e mostrar loading
        const textoOriginal = btnCriar.innerHTML;
        btnCriar.innerHTML = isUpdate ? '‚è≥ Atualizando...' : '‚è≥ Criando...';
        btnCriar.disabled = true;
        
        // Definir URL e m√©todo baseado no modo
        const url = isUpdate ? `/api/projetos/${projetoId}` : '/api/projetos';
        const method = isUpdate ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(dados)
        });
        
        console.log('üì° Response status:', response.status);
        console.log('üì° Response ok:', response.ok);
        
        const result = await response.json();
        console.log('üì° Response data:', result);
        
        if (response.ok) {
            // Feedback visual de sucesso
            btnCriar.innerHTML = isUpdate ? '‚úÖ Atualizado!' : '‚úÖ Criado!';
            btnCriar.style.background = '#28a745';
            
            // Aguardar um momento para o usu√°rio ver
            setTimeout(() => {
                // Restaurar bot√£o
                btnCriar.disabled = false;
                btnCriar.style.background = '#007acc';
                
                // Recarregar a lista de projetos
                carregarProjetos();
                
                if (isUpdate) {
                    // Projeto foi atualizado - mostrar op√ß√µes
                    const novoOuContinuar = confirm('‚úÖ Projeto "' + result.data.nome + '" atualizado com sucesso!\n\nüîÑ O que deseja fazer?\n\n‚úÖ OK = Criar NOVO projeto\n‚ùå Cancelar = Continuar editando este projeto');
                    
                    if (novoOuContinuar) {
                        // Limpar para novo projeto
                        e.target.reset();
                        btnCriar.innerHTML = 'üöÄ Criar Projeto';
                        delete btnCriar.dataset.projetoId;
                        document.querySelector('input[name="nome"]').focus();
                    } else {
                        // Continuar editando
                        btnCriar.innerHTML = '‚úèÔ∏è Atualizar Projeto';
                        document.getElementById('btn-novo').style.display = 'inline-block';
                        document.querySelector('textarea[name="descricao"]').focus();
                    }
                } else {
                    // Projeto foi criado - mostrar op√ß√µes
                    const continuar = confirm('‚úÖ Projeto "' + result.data.nome + '" criado com sucesso!\n\nüîÑ O que deseja fazer?\n\n‚úÖ OK = Criar OUTRO projeto\n‚ùå Cancelar = Continuar editando este projeto');
                    
                    if (continuar) {
                        // Limpar formul√°rio para novo projeto
                        e.target.reset();
                        btnCriar.innerHTML = 'üöÄ Criar Projeto';
                        document.querySelector('input[name="nome"]').focus();
                    } else {
                        // Manter dados do projeto rec√©m criado no formul√°rio para edi√ß√£o
                        document.querySelector('input[name="nome"]').value = result.data.nome;
                        document.querySelector('textarea[name="descricao"]').value = result.data.descricao || '';
                        
                        // Mudar o bot√£o para "Atualizar"
                        btnCriar.innerHTML = '‚úèÔ∏è Atualizar Projeto';
                        btnCriar.dataset.projetoId = result.data.id;
                        
                        // Mostrar bot√£o "Novo Projeto"
                        document.getElementById('btn-novo').style.display = 'inline-block';
                        
                        // Focar na descri√ß√£o para continuar editando
                        document.querySelector('textarea[name="descricao"]').focus();
                    }
                }
            }, 1000);
            
        } else {
            // Restaurar bot√£o em caso de erro
