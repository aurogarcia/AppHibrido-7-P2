async function excluirProjeto(projetoId, projetoNome) {
    const confirmacao = confirm(`‚ö†Ô∏è ATEN√á√ÉO: Excluir Projeto\n\nTem certeza que deseja excluir o projeto "${projetoNome}"?\n\nEsta a√ß√£o ir√°:\n‚Ä¢ Remover o projeto permanentemente\n‚Ä¢ Remover TODAS as tarefas associadas a este projeto\n\nEsta a√ß√£o N√ÉO pode ser desfeita!`);
    
    if (!confirmacao) {
        return;
    }
    
    try {
        console.log('üóëÔ∏è Excluindo projeto:', projetoId);
        
        const response = await fetch(`/api/projetos/${projetoId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert(`‚úÖ Projeto "${projetoNome}" foi exclu√≠do com sucesso!`);
            // Recarregar a p√°gina para atualizar a lista
            carregarProjetosComTarefas();
