            alert(`‚ùå Erro ao excluir projeto: ${result.erro || 'Erro desconhecido'}`);
        }
    } catch (error) {
        console.error('‚ùå Erro:', error);
        alert('‚ùå Erro de conex√£o com o servidor');
    }
}

// Form submit
document.getElementById('form-novo-projeto').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const btnCriar = document.getElementById('btn-criar');
    const projetoId = btnCriar.dataset.projetoId;
    const isUpdate = !!projetoId; // Se tem ID, √© atualiza√ß√£o
    
